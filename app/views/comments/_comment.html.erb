<% @review.comments.each do |comment| %>
  <% if comment.author == nil %>
    <% next %>
  <% end %>
  <p>
    <strong>Date:</strong>
    <%= comment.author %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to 'Destroy Comment', [comment.review, comment],
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>